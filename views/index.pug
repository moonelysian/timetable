extends layout

block content
  .container-lecture
    section.header
      h3.headline 시간표 만들기
    section.section-nav
      form(id='search-form' class='form-search' action='/courses/search/', Method='GET')
        input.form-control(type='text', placeholder='강의 검색')
        span
          i.material-icons.ic-search search
      ul.list-lecture
        each course in courses
          li(class='card-lecture' data-code= course.code)
            a(class='lecture-title' href='#') #{course.lecture}
            h6.lecture-time
              i.material-icons.ic-lecture-info access_time
              if course.dayofweek.length == 2
                span #{course.start_time}:00 - #{course.end_time}:00 | (#{course.dayofweek.split('')[0]}) , (#{course.dayofweek.split('')[1]})
              else
                span #{course.start_time}:00 - #{course.end_time}:00 | (#{course.dayofweek})
            ul.list-lecture-info
              li 교과목 코드 : #{course.code}
              li 담당 교수 : #{course.professor}
              li 강의실 : #{course.location}
